<Window x:Class="RHTools.WPFStyle.WindowRandomLinearBrush"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RHTools.WPFStyle"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="WindowRandomLinearBrush" Height="600" Width="800"
        Closing="Window_Closing">
    <Grid>
        <Grid Width="3000" Height="2400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.Background>
                <RadialGradientBrush x:Name="_RadialGradientBrush">
                    <GradientStop Color="Green" Offset="2"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="White" Offset="0.5"/>
                </RadialGradientBrush>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
