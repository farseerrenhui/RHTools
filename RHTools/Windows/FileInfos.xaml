<Window x:Class="RHTools.FileInfos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FileInfos" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="24">
            <Button Width="80" DockPanel.Dock="Right" Content="Search" Click="Button_Click"/>
            <TextBox Name="TextBoxPath"/>
        </DockPanel>
        <TextBox Name="TextBoxFiles" AcceptsReturn="True"/>
    </DockPanel>
</Window>
