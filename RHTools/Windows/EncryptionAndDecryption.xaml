<Window x:Class="RHTools.EncryptionAndDecryption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RHTools"
        mc:Ignorable="d"
        Title="EncryptionAndDecryption" Height="220" Width="600">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5">
        <TextBlock Text="密钥:syxp(4位有效,其他未验证)" Margin="2"/>
        <TextBox Name="tb1" Margin="2"/>
        <Button Content="加密" Click="Button_Click_Encryption" Margin="2"/>
        <TextBox Name="tb1_result" Margin="2"/>
        <TextBox Name="tb2" Margin="2,20,2,2"/>
        <Button Content="解密" Click="Button_Click_Decryption" Margin="2"/>
        <TextBox Name="tb2_result" Margin="2"/>
    </StackPanel>
</Window>
